{
  "name": "jadoo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "mkdir -p dist/css dist/js dist/images",
    "build": "npm run build:css && npm run build:html && npm run build:js && npm run build:img",
    "build:css": "sass src/scss/main.scss dist/css/style.css --style=compressed",
    "build:html": "cp src/index.html dist/",
    "build:js": "cp src/js/script.js dist/js/",
    "build:img": "cp -r src/images/. dist/images/",
    "clean": "rm -rf dist",
    "watch:css": "sass --watch src/scss/main.scss dist/css/style.css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "sass": "^1.97.2",
    "scss-reset": "^1.4.6"
  }
}
